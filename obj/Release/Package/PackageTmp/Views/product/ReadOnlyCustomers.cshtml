
@model WebApplication4.ViewModels.ProductViewModel
@{
    ViewBag.Title = "RandomCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table-bordered" id="customers">
    <thead>
        <tr>
            <th style="width:600px;padding:10px;">Customers</th>
            <th style="width:600px;padding:10px;">MemberShip Type</th>
        </tr>
    <tbody>
    </tbody>
    </thead>
</table>
@section scripts
{
    <script>
    $(document).ready(function () {
        var table= $("#customers").DataTable({
            ajax: {
                url: "/api/customer",
                dataSrc:""
            },
            columns: [
                {
                    data: "name",
                    render: function (data, type, customer) {
                        return "<a href='/product/Edit/" + customer.id + "'>" + data +"</a>";
                    }
                },
                {
                    data:"membershipType.type"
                }
            ]
        });
    });
    </script>
}